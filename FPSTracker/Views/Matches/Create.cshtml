<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WinOrLoss" class="control-label"></label>
                <input asp-for="WinOrLoss" class="form-control" />
                <span asp-validation-for="WinOrLoss" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ratio" class="control-label"></label>
                <input asp-for="Ratio" class="form-control" />
